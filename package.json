{
  "name": "ai-resume-builder",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": { "node": ">=18 <23" },
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm --prefix server run start",
    "server:dev": "npm --prefix server run start:dev",
    "server:start": "npm --prefix server run start",

    "ci:render": "npm ci --include=dev && npm --prefix server ci --omit=dev || npm --prefix server i --omit=dev && npm run build",

    "postinstall": "npm --prefix server ci --omit=dev || npm --prefix server i --omit=dev"
  },
  "dependencies": {
    "@react-pdf/renderer": "^3.4.5",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.447.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.18",
    "vite": "^5.4.10",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.1.0"
  }
}
