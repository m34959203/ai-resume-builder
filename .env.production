# .env.production - Production Environment Variables

# ============================================
# SERVER CONFIGURATION
# ============================================

# Public URL (your deployed frontend URL)
PUBLIC_URL=https://m34959203.github.io/ai-resume-builder/

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://m34959203.github.io,https://your-custom-domain.com

# ============================================
# AI SERVICE (OpenRouter)
# ============================================
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=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

# App identification for OpenRouter analytics
VITE_APP_NAME=AI Resume Builder Production

# ============================================
# HEADHUNTER API (hh.ru/hh.kz)
# ============================================
# Register your app: https://dev.hh.ru/admin
HH_CLIENT_ID=YOUR_HH_CLIENT_ID
HH_CLIENT_SECRET=YOUR_HH_CLIENT_SECRET

# ============================================
# SECURITY
# ============================================
# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-super-secret-session-key-here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry DSN (optional - for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID (optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DATABASE (optional - for user profiles)
# ============================================
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# CACHE (optional - Redis for caching AI responses)
# ============================================
# REDIS_URL=redis://default:password@host:6379

# ============================================
# EMAIL (optional - for notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_HH_INTEGRATION=true
ENABLE_PDF_EXPORT=true
ENABLE_ANALYTICS=true

# ============================================
# PERFORMANCE
# ============================================
# Max payload size
MAX_JSON_SIZE=10mb

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# AI response cache TTL (seconds)
AI_CACHE_TTL=3600