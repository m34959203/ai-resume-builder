# ===================== FRONT (Vite, прод на Render) =====================
VITE_APP_NAME=AI Resume Builder
# BFF на Render
VITE_API_URL=https://ai-resume-bff.onrender.com
VITE_API_PREFIX=/api
VITE_USE_MOCKS=false
# Таймауты и кэш
VITE_API_TIMEOUT_MS=12000
VITE_AREAS_TTL_MS=21600000

# ===================== SERVER (Node, прод на Render) =====================
NODE_ENV=production
PORT=10000

# Разрешённые фронты (CORS) — домен статики Render
FRONT_ORIGINS=https://ai-resume-frontend.onrender.com

# Куда возвращаем пользователя после OAuth (страница фронта)
FRONT_REDIRECT_URL=https://ai-resume-frontend.onrender.com/?page=home&auth=ok

# ===================== HeadHunter =====================
HH_HOST=hh.kz
HH_OAUTH_HOST=https://hh.kz
HH_CLIENT_ID=your_hh_client_id_here
HH_CLIENT_SECRET=your_hh_client_secret_here
# ДОЛЖНО совпадать с маршрутом сервера и доменом BFF на Render
HH_REDIRECT_URI=https://ai-resume-bff.onrender.com/api/auth/hh/callback
HH_USER_AGENT=AI Resume Builder/1.0 (youremail@domain)

# ===================== Cookies =====================
# Для Render можно оставить пустым, если используете onrender.com домен
COOKIE_DOMAIN=
# На проде обязательно true (HTTPS на Render)
COOKIE_SECURE=true

# ===================== OpenRouter (сервер, backend) =====================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=deepseek/deepseek-r1:free
OPENROUTER_REFERER=https://ai-resume-frontend.onrender.com
OPENROUTER_TITLE=AI Resume Builder


# ===================== YouTube Data API (опционально) =====================
# Для получения реальных видеоуроков с YouTube.
# Без ключа — fallback на ссылки поиска YouTube.
# Получить: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=

